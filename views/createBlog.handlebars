<form>
  <div class="form-group">
    <label for="blogTitle">Blog Title:</label>
    <input
      type="input"
      class="form-control"
      id="blogTitle"
      placeholder="enter blog title"
    />
  </div>
  <div class="form-group">
    <label for="blogDate">Blog Date:</label>
    <input
      type="date"
      class="form-control"
      id="blogDate"
      placeholder="enter date"
    />
  </div>
  <div class="form-group">
    <label for="blogContent">Enter Content of Blog:</label>
    <textarea
      class="form-control"
      id="blogContent"
      rows="3"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary mb-2" id="blogCreateBtn">Create</button>
</form>